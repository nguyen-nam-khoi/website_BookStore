<style>

    .center {
        margin-left:760px;
        text-align: center;
    }

    .pagination {
        /*display: inline-block;*/
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            border: 1px solid #ddd;
            margin: 0 4px;
        }

            .pagination a.active {
