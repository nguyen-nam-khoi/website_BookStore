@model IEnumerable<BookStore.Models.SACH>
@{
    ViewBag.Title = "SPTheochude";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h2>sách theo chủ đề</h2>
        <div class="col-xl-3 col-lg-4 col-md-4 col-12">
@{foreach (var item in Model)
    {

            <div class="single-product">
                <div class="product-img">
                    <a href="@Url.Action("XemChiTietsp", "BookStore", new { Macd = item.Masach })">
                        <img class="default-img" src="~/Content/img/@item.Anhbia" alt="@item.Tensach">
                        <img class="hover-img" src="~/Content/img/@item.Anhbia" alt="@item.Tensach">
                    </a>
                    <div class="button-head">
                        <div class="product-action">
                            <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                            <a title="Wishlist" href="#"><i class=" ti-heart "></i><span>Add to Wishlist</span></a>
                            <a title="Compare" href="#"><i class="ti-bar-chart-alt"></i><span>Add to Compare</span></a>
                        </div>
                        <div class="product-action-2">
                            <a title="Add to cart" href="#">Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
                <div class="product-content">
                    <h3><a href="@Url.Action("XemChiTietsp", "BookStore", new { Masach = item.Masach })">@item.Tensach</a></h3>
                    <div class="product-price">
                        <span>@item.Giaban</span>
                    </div>
                </div>
            </div>
        }
    }
        </div>





